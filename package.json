{
	"name": "cardmesh-web-app",
	"version": "1.0.0",
	"type": "module",
	"license": "MIT",
	"author": "Mathias Reker",
	"repository": {
		"type": "git",
		"url": "git@github.com:CardMesh/web-app.git"
	},
	"bugs": {
		"url": "https://github.com/CardMesh/web-app/issues"
	},
	"homepage": "https://cardmesh.fly.dev",
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"deploy": "flyctl secrets import < .env.production && flyctl deploy --build-arg NODE_ENV=production --remote-only",
		"dev": "vite dev",
		"format": "prettier --plugin-search-dir . --write . && eslint . --fix",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"preview": "vite preview",
		"start": "node build",
		"test": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@icons-pack/svelte-simple-icons": "^3.0.0",
		"@rodneylab/svelte-social-icons": "^0.0.25",
		"@zerodevx/svelte-toast": "^0.9.3",
		"chart.js": "^4.3.0",
		"js-cookie": "^3.0.5",
		"leaflet": "^1.9.3",
		"moment-timezone": "^0.5.43",
		"qrcode-svg": "^1.1.0",
		"svelte-icons-pack": "^2.1.0",
		"vcf": "^2.1.1"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.33.0",
		"@popperjs/core": "^2.11.7",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.16.2",
		"@types/cookie": "^0.5.1",
		"bootstrap": "^5.3.0-alpha3",
		"eslint": "^8.40.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.0",
		"sass": "^1.62.1",
		"svelte": "^3.59.0",
		"svelte-check": "^3.3.1",
		"svelte-feather-icons": "^4.0.0",
		"svelte-preprocess": "^5.0.3",
		"typescript": "^5.0.4",
		"vite": "^4.3.5",
		"vitest": "^0.31.0"
	}
}
